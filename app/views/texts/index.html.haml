.wrapper
  = render "posts/head"
  = render "posts/foot"

.today
  .today__title
    今日の川柳
    %br
    新着順
  .today__senryu
    = link_to "川柳を投稿", new_text_path(current_user), class: 'btn'
  .today__text
    - @texts.each do |text|
      .contents
        .content 
          = text.text
        .syosai
          = link_to "詳細", text_path(text)
        .date
          = text.created_at.strftime("%Y/%m/%d %H:%M")
        .iinecount
          いいね数：
          = text.iined_users.count



  