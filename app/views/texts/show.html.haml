.wrapper
  = render "posts/head"
  = render "posts/foot"


.today-show
  .today-show__title
    みんなの川柳投稿詳細ページ
  .today-show__user
    = @text.user.name
  .today-show__text
    = @text.text
  .today-show__count
    いいね件数: #{@text.iines.count}
    - if user_signed_in?
      - if current_user.already_iined?(@text)
        = button_to 'いいねを取り消す', text_iine_path(@text), method: :delete
      - else
        = button_to 'いいね', text_iines_path(@text)
  .today-show__iineuser
    いいねしたユーザー:
    - @text.iined_users.each do |user|
      = user.name
  .today-show__comments
    .today-show__comments__title
      コメント一覧
    .today-show__comments__index
      - @comments.each do |c|
        .today-show__comments__index__content
          = c.content
          -if c.user_id == current_user.id
            = link_to text_comment_path(@text, c), method: :delete do
              %i.fas.fa-trash-alt
        .today-show__comments__index__name
          = c.user.name
    .today-show__comments__form
      - if user_signed_in?
        = form_for [@text, @comment] do |f|
          = f.text_field :content
          %br/
          = f.submit 'コメントする'
  .today-show__destroy
    -if @text.user_id == current_user.id
      = link_to text_path(@text),class: "booder", method: :delete, data: { confirm: '本当に削除しますか？' } do
        .item-stop-btn 川柳を削除する
  = link_to "みんなの川柳一覧へ戻る", texts_path



