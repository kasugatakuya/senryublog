.wrapper
  = render "posts/head"

.messages
  .messages_title
    = @post.text
  .message
    - @messages.each do |message|
      .upper-message
        .lower-message
          = message.content
        .upper-message__user-name
          = message.user.name
        .upper-message__date
          = message.created_at.strftime("%Y/%m/%d %H:%M")
        
      



.form
  = form_for [@post, @message] do |f|
    = f.text_field :content, class: 'form__message', placeholder: '5・7・5で入力してね(文字数7~22)'
    = f.submit '送信', class: 'form__submit'
